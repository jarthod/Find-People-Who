!!! 5
%html
  %head
    %title Find People Who...
    = stylesheet_link_tag "href='http://fonts.googleapis.com/css?family=Ubuntu", "screen.css"
    = javascript_include_tag "jquery-1.6.2", "rails", "jquery-ui-1.8.16", "web_socket", "chat", "application"
    = csrf_meta_tag

  %body
    #rightcol
      .box_content
        #login
          - if @user
            = @user.name
            = image_tag @user.image_with_fallback, :class => "user"
            = link_to "http://last.fm/user/" + @user.name, :target => "blank" do
              = image_tag "lastfm.png"
          - else
            = link_to "Login", "/sessions/new" 
          .clear
        %ul#notifications
          -# %li You can Join a chat about Lady Gaga
          -# %li You can Join a chat about EDC
    %h1 FIND PEOPLE WHO...
    #wrapp_box
      %ul
        %li.box
          = yield
    
