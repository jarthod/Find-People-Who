!!! 5
%html
  %head
    %title Hack Day Paris
    = stylesheet_link_tag :all
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"
    = csrf_meta_tag

  %body
    %header
      %h1 Music Match!
      #login
        - if @user
          = image_tag @user.image
          = @user.name
        - else
          %a{ :href => "/sessions/new"}
            Login with Last.fm
      .clear
    %h2 PEOPLE WHO...
    = yield  
    
